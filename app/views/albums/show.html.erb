<div class="container">
  <div class="row">
    <div class="album-name col-6">
     <strong><%= @album.name %></strong>
    </div>
    <div class="album-edit-delete col-6">
      <%= link_to 'Add photos <i class="fa-solid fa-arrow-up-from-bracket"></i>'.html_safe, edit_album_path(@album) %>
      <%= link_to ' Delete album <i class="far fa-trash-alt" style="font-size: 15px;"></i>'.html_safe, album_path(@album), data: { turbo_method: :delete, turbo_confirm:
      "You WON'T be able to RECOVER the album and it's photos. Are you sure you want to Delete?" } %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row card-align">
    <% if @album.photos.attached? %>
        <% @album.photos.each do |photo| %>
      <div class="col-3 mb-3 p-2">
          <%= cl_image_tag photo.key, height: 180, width: 250, crop: :fill %>
        <% end %>
    <% else %>
          <img src="https://www.agora-gallery.com/advice/wp-content/uploads/2015/10/image-placeholder.png" alt="">
      </div>
    <% end %>
  </div>
</div>
