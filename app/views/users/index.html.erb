<h1>All User (index) #test</h1>

<div class="container" style="padding-top: 20px;">
  <div class="row">
    <% @users.each do |user| %>
      <div class="card-product-s col d-flex justify-content-center">
        <div class="card shadow mt-3" style="width: 35rem;">
          <div class="col-4">
            <div class="card-product-infos-s">
             <h2><%= user.last_name %></h2>
            </div>
          </div>
          <div class="card-body col-8">
            <h1>user_name: <%= user.first_name %></h1>
            <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, user_path(user) %>
            <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, user_path(user), class: "text-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete"}%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
