<div class="container w-50 shadow rounded-3 p-4 bg-white my-5">
  <h2 class="text-center mb-3"><strong>Sign up</strong></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.label :first_name %>
      <%= f.input :first_name, required: true %>
      <%= f.label :last_name %>
      <%= f.input :last_name, required: true %>
      <%= f.label :date_of_birth %>
      <%= f.input :dob, label: "Date of Birthday", order: [:day, :month, :year], start_year: Date.today.year - 100, end_year: Date.today.year, required: true %>
      <%= f.label :email %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.label :password %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.label :password_confirmation %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.label :address %>
      <%= f.input :address, required: true %>
      <%= f.label :personal_photo %>
      <%= f.input :avatar, as: :file %>
      <%= f.label :background_photo %>
      <%= f.input :banner, as: :file %>
    </div>

    <div class="container text-center">
      <%= f.button :submit, "Sign up", class: "btn btn-primary modal-cancel-btn text-light mb-3 rounded-pill", style: "width: 7.813rem;"  %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
